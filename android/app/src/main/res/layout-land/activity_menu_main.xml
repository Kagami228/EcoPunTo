<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67ad3b">


    <Button
        android:id="@+id/buttoninfo"
        android:layout_width="147dp"
        android:layout_height="125dp"
        android:layout_marginLeft="578dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button7"
        android:text="Info"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonany"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button5"
        android:text="Any"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonmap"
        android:layout_width="207dp"
        android:layout_height="183dp"
        android:layout_marginStart="324dp"
        android:layout_marginLeft="617dp"
        android:layout_marginTop="215dp"
        android:layout_toEndOf="@+id/buttonSet"
        android:background="@drawable/button6"
        android:text="Map"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ecopunto" />

    <Button
        android:id="@+id/buttonSet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/button4"

        android:text="Notification"
        android:textColor="#ffffff" />

</RelativeLayout>