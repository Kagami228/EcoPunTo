<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67ad3b"

    tools:context=".MenuMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-47dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="520dp"

            android:layout_marginLeft="0sp"
            android:layout_marginTop="10sp"

            app:srcCompat="@drawable/ecopunto" />

        <Button
            android:id="@+id/buttoninfo"
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:layout_marginLeft="338dp"
            android:layout_marginTop="415dp"
            android:background="@drawable/button7"
            android:text="Info"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonany"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/button5"
            android:text="Any"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonmap"
            android:layout_width="213dp"
            android:layout_height="200dp"
            android:layout_below="@+id/buttoninfo"
            android:layout_marginLeft="269dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button6"
            android:text="Map"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonSet"
            android:layout_width="225dp"
            android:layout_height="173dp"
            android:layout_below="@+id/buttonany"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="7dp"

            android:background="@drawable/button4"
            android:text="Notification"
            android:textColor="#ffffff" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>