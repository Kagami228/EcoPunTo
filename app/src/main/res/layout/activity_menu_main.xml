<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67ad3b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="240sp"
            android:layout_height="250sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"

            app:srcCompat="@drawable/ecopunto"/>

        <Button
            android:id="@+id/buttoninfo"
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:layout_marginStart="158sp"
            android:layout_marginTop="0sp"
            android:background="@drawable/button7"
            android:text="@string/info"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonany"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginStart="50sp"
            android:layout_marginTop="-30sp"
            android:background="@drawable/button5"
            android:text="@string/any"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonmap"
            android:layout_width="225sp"
            android:layout_height="225sp"
            android:layout_marginStart="169sp"
            android:layout_marginTop="-60sp"
            android:background="@drawable/button6"
            android:text="@string/map"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonSet"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginStart="26sp"
            android:layout_marginTop="-120sp"
            android:background="@drawable/button4"

            android:text="@string/settings"
            android:textColor="#ffffff" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>