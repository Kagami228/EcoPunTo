<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="40dip" />
            <stroke android:width="3dip" android:color="#fff" />
            <gradient android:angle="180" android:startColor="#fff" android:endColor="#67ad3b" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="40dip" />
            <stroke android:width="3dip" android:color="#fff" />
            <gradient android:angle="180" android:startColor="#6081a1" android:endColor="#1f568c" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#357818" />
            <gradient android:angle="180" android:startColor="#357818" android:endColor="#67ad3b" />
        </shape>
    </item>
</selector>